<launch>
  <!-- visualization -->
  <node name="dvs_renderer_left" pkg="dvs_renderer" type="dvs_renderer" output="screen">
    <param name="display_method" value="red-blue"/>
    <remap from="events" to="/dvs/events" />
    <remap from="image" to="/dvs/image_raw" />
    <remap from="dvs_rendering" to="dvs_rendering" />
  </node>

  <!-- Save images to disk -->
  <node name="image_saver" pkg="image_view" type="image_saver" respawn="false" output="screen">
    <remap from="image" to="dvs_image_raw"/>
    <param name="filename_format" value="/home/cedric/Documents/phd/data/image_raw/image%04d.png" />
  </node>
  
  <!-- Save images to disk -->
  <node name="image_saver2" pkg="image_view" type="image_saver" respawn="false" output="screen">
    <remap from="image" to="dvs_rendering"/>
    <param name="filename_format" value="/home/cedric/Documents/phd/data/events_red_blue/image%04d.png" />
  </node>

  <!-- display -->
  <node name="image_view_left" pkg="image_view" type="image_view">
  	<remap from="image" to="dvs_rendering"/>
  </node>

</launch>
